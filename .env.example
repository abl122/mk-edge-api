# Servidor
NODE_ENV=production
PORT=3333
API_BASE_URL=http://localhost:3333

# MongoDB
MONGODB_URL=mongodb://mongo:27017/mkedgetenants
MONGODB_REQUIRED=true
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=15d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limit
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100

# Tenant padrão
DEFAULT_TENANT_ID=
DEFAULT_TENANT_NAME=Sua Empresa
DEFAULT_TENANT_CNPJ=00.000.000/0001-00
DEFAULT_TENANT_EMAIL=contato@suaempresa.com.br
DEFAULT_TENANT_PHONE=
DEFAULT_TENANT_DOMAIN=suaempresa.com.br
DEFAULT_AGENT_URL=https://seu-provedor.com.br/admin/addons/mk-edge/api.php
DEFAULT_AGENT_TOKEN=your_agent_token_here

# Admin padrão
DEFAULT_ADMIN_LOGIN=admin
DEFAULT_ADMIN_PASSWORD=change_this_password
DEFAULT_ADMIN_EMAIL=admin@suaempresa.com.br

# Logs
LOG_LEVEL=info
